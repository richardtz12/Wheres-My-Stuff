<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group14.wheresmystuff.controller.MainActivity">

    <Button
        android:id="@+id/logoutButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/viewItemsButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:text="logout"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="447dp" />

    <Button
        android:id="@+id/addItemButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/viewItemsButton"
        android:layout_alignBottom="@+id/viewItemsButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:text="Register Your Item"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/viewItemsButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="12dp"
        android:text="View Items" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
        <!--tools:context="com.example.mapwithmarker.MapsMarkerActivity" />-->



</RelativeLayout>
